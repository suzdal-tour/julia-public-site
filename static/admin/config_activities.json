{
    "collections":[
        {
            "name":"activities",
            "label":"Activities",
            "folder":"data/activities",
            "create":true,
            "identifier_field":"id",
            "summary":"Id: {{slug}} - Name: {{title}}",
            "extension":"yml",
            "format":"yml",
            "fields":[
                {
                    "label":"Id",
                    "name":"id",
                    "widget":"number",
                    "required":false
                },
                {
                    "label":"Title",
                    "name":"title",
                    "widget":"string",
                    "required":false
                },
                {
                    "label":"Status",
                    "name":"status",
                    "widget":"select",
                    "options":[
                        "active", "inactive"
                    ]
                },
                {
                    "label":"Cover",
                    "name":"cover_image",
                    "widget":"image",
                    "required":false
                },
                {
                    "label":"Annotation",
                    "name":"annotation",
                    "widget":"text",
                    "required":false
                },
                {
                    "label":"Description",
                    "name":"description",
                    "widget":"text",
                    "required":false
                },
                {
                    "label":"Price",
                    "name":"price",
                    "widget":"object",
                    "fields":[
                        {
                            "label":"Per Person",
                            "name":"per_person",
                            "widget":"list",
                            "fields":[
                                {
                                    "label":"Title",
                                    "name":"title",
                                    "widget":"string"
                                },
                                {
                                    "label":"Value",
                                    "name":"value",
                                    "widget":"number"
                                }
                            ]
                        }
                    ],
                    "required":false
                }
            ]
        }
    ]
}